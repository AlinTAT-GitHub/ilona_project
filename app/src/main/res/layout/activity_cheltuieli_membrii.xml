<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Cheltuieli_Membrii">

    <!-- TextView pentru afișarea titlului -->
    <TextView
        android:id="@+id/cheltuieli_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheltuieli:"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- ListView pentru afișarea cheltuielilor și adresele de email -->
    <ListView
        android:id="@+id/cheltuieli_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
